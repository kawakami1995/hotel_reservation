<h1>新規登録（施設）</h1>

<%= render "shared/error", obj: @room %> 

<%= form_with model: @room, url: rooms_create_path, html: {multipart: true} ,local: true do |f| %>

  <div class="field">
    <%= f.label :施設名 %><p class="caution">※必須</p><br>
    <%= f.text_field :room_name, autofocus: true, autocomplete: "room_name" %><br />
  </div>

  <div class="field">
    <%= f.label :施設詳細 %><p class="caution">※必須</p><br>
    <%= f.text_field :room_introduction, autocomplete: "room_detail" %><br />
  </div>

  <div class="field">
    <%= f.label :料金 %><p class="caution">※必須</p><br>
    <%= f.text_field :price, autocomplete: "price"%>
  </div>  

  <div class="field">
    <%= f.label :住所 %><p class="caution">※必須</p><br>
    <%= f.text_field :address, autocomplete: "address"%>
  </div>  

  <div class="field">
    <%= f.label :施設画像 %>
    <%= f.file_field :room_image, autocomplete: "room_image"%>
  </div>  

  <%= f.hidden_field :user_id ,value: @user.id %>

  <div class="actions">
    <%= f.submit "保存"%>
  </div>  
<% end %> 

<%=link_to("/") do %>
<button class="btn" >キャンセル</button>
<%end%><br>

